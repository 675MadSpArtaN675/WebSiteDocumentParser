@model Task_d;

<h2>Добавление задания</h2>
<form asp-action="TaskAdd" asp-controller="DataWorker" method="post">
	<div>
		<label>Описание задания</label>
		<input asp-for="TaskAnnotation" type="text" />

		<label>Эталонный ответ</label>
		<input asp-for="TaskCorrectAnswer" type="text" />

		<label>Стандартный ответ</label>
		<input asp-for="TaskStandartAnswer" type="text" />

		<label>Время выполнения</label>
		<input asp-for="TaskTime" type="number" />
	</div>

	<div>
		<label>Тип задания</label>
		<select name="type" asp-items="ViewBag.TypeTask">
			<option>Выбирайте</option>
		</select>
	</div>
	<div>
		<label>Компетенция</label>
		<select name="comp" asp-items="ViewBag.Competences">
			<option>Выбирайте</option>
		</select>
	</div>
	<div>
		<label>Дисциплина</label>
		<select name="discip" asp-items="ViewBag.Discipline">
			<option>Выбирайте</option>
		</select>
	</div>

	<input type="submit" value="Отправить" />
</form>