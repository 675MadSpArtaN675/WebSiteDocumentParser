@model SelectedItemModel;

<h3>Добавление варианта ответа</h3>
<form asp-action="SelectedItemsAdd" asp-controller="DataWorker">
	<div>
		<label>Текст ответа</label>
		<input asp-for="SelectValue" type="text"/>

		<label>Правильный?</label>
		<input asp-for="SelectTrue" type="checkbox"/>
	</div>

	<div>
		<select asp-for="TaskObject" asp-items="ViewBag.Tasks">
			<option>Выбирай</option>
		</select>
	</div>

	<input type="submit" value="Отправить" />
</form>

<h4>Удаление варианта ответа</h4>
<form asp-action="RemoveSI" asp-controller="DataRemover" method="post">
	<div>
		<select name="sel_item" asp-items="ViewBag.SelectedItems"></select>
	</div>
	<input type="submit" value="Удалить" />
</form>